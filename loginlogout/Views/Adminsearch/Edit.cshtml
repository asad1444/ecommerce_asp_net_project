@model loginlogout.Models.ProductVM

@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_Layoutcrud.cshtml";
}

<style>
    /* Reuse the same CSS styles from Add Product page */
    body {
        font-family: 'Poppins', sans-serif;
        background: #e7f0fd;
    }

    .form-container {
        max-width: 600px;
        margin: auto;
        padding: 30px 35px;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(63, 81, 181, 0.15);
        border: 1px solid #c3d2fc;
    }

    h2 {
        color: #3f51b5;
        font-weight: 700;
        margin-bottom: 25px;
        text-align: center;
        letter-spacing: 1.2px;
    }

    label {
        color: #3f51b5;
        font-weight: 600;
    }

    .form-control, .form-select {
        border-radius: 10px;
        border: 1.5px solid #9fa8da;
        font-size: 15px;
        color: #2c387e;
        background: #f7faff;
    }

        .form-control:focus, .form-select:focus {
            border-color: #3f51b5;
            box-shadow: 0 0 8px #7986cb44;
            background: white;
            color: #1a237e;
            outline: none;
        }

    .btn-primary {
        background-color: #3f51b5;
        border: none;
        border-radius: 12px;
        padding: 12px;
        font-weight: 700;
        font-size: 16px;
        width: 100%;
        letter-spacing: 1px;
        box-shadow: 0 6px 15px rgba(63, 81, 181, 0.3);
    }

        .btn-primary:hover {
            background-color: #303f9f;
            box-shadow: 0 8px 20px rgba(48, 63, 159, 0.5);
        }

    input[type="file"] {
        padding: 6px 10px;
        background-color: #f7faff;
        border-radius: 10px;
        border: 1.5px solid #9fa8da;
        color: #3f51b5;
    }

        input[type="file"]:hover {
            border-color: #3f51b5;
        }

    .current-image-container {
        text-align: center;
        margin-bottom: 15px;
    }

        .current-image-container img {
            border-radius: 10px;
            margin-top: 10px;
            max-width: 150px;
            max-height: 70px;
        }
</style>

<div class="form-container">
    <h2>Edit Product</h2>

    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="ProductId" />
        <input type="hidden" asp-for="CategoryId" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-4">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="CategoryId" class="form-label"></label>
            <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.Category">
                <option value="">Select category</option>
            </select>
            <span asp-validation-for="CategoryId" class="text-danger"></span>
        </div>

        <div class="row g-3 mb-4">
            <div class="col-md-6">
                <label asp-for="Price" class="form-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div class="col-md-6">
                <label asp-for="Stock" class="form-label"></label>
                <input asp-for="Stock" class="form-control" />
                <span asp-validation-for="Stock" class="text-danger"></span>
            </div>
        </div>




        <div class="mb-4">
            <label asp-for="Description" class="form-label"></label>
            <textarea asp-for="Description" rows="4" class="form-control" style="resize:none;"></textarea>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>

        <div class="mb-4">
            <label asp-for="LongDescription" class="form-label"></label>
            <textarea asp-for="LongDescription" rows="4" class="form-control" style="resize:none;"></textarea>
            <span asp-validation-for="LongDescription" class="text-danger"></span>
        </div>

        @if (!string.IsNullOrEmpty(ViewBag.CurrentImage))
        {
            <div class="current-image-container">
                <label>Current Product Image</label>
                <div>
                    <img src="~/ProductImages/@ViewBag.CurrentImage" alt="Current Product Image" />
                </div>
            </div>
        }

        <div class="mb-4">
            <label asp-for="ProductPhoto" class="form-label"></label>
            <input asp-for="ProductPhoto" type="file" class="form-control" accept="image/*" />
            <span asp-validation-for="ProductPhoto" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary w-100">Save Changes</button>
    </form>


</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
