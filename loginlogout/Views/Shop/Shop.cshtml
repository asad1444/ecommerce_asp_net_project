	<!--===============================================================================================-->
	<script src="~/templatewebsite/vendor/bootstrap/js/popper.js"></script>
	<script src="~/templatewebsite/vendor/bootstrap/js/bootstrap.min.js"></script>
	<!--===============================================================================================-->
	<script src="~/templatewebsite/vendor/select2/select2.min.js"></script>
	<script>
		$(".js-select2").each(function(){
			$(this).select2({
				minimumResultsForSearch: 20,
				dropdownParent: $(this).next('.dropDownSelect2')
			});
		})
	</script>
	<!--===============================================================================================-->
	<script src="~/templatewebsite/vendor/daterangepicker/moment.min.js"></script>
