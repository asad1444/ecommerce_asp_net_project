@model IEnumerable<loginlogout.Models.About>

@{
    ViewData["Title"] = "Show About";
    Layout = "~/Views/Shared/_Layoutcrud.cshtml";
}

<style>
    body {
        font-family: 'Poppins', sans-serif;
        background-color: #e7f0fd;
    }

    .container {
        max-width: 1100px;
        margin: auto;
        padding: 30px 15px;
    }

    h2 {
        text-align: center;
        color: #3f51b5;
        font-weight: 700;
        margin-bottom: 30px;
    }

    .card-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
        gap: 25px;
    }

    .card {
        background: #f0f5ff;
        border: 1px solid #c3d2fc;
        padding: 20px;
        border-radius: 15px;
        box-shadow: 0 10px 25px rgba(63, 81, 181, 0.15);
        transition: transform 0.2s;
    }

        .card:hover {
            transform: translateY(-5px);
        }

        .card img {
            width: 100%;
            height: 160px;
            object-fit: cover;
            border-radius: 12px;
            margin-bottom: 15px;
        }

    .card-title {
        font-size: 18px;
        font-weight: 600;
        color: #3f51b5;
        margin-bottom: 10px;
    }

    .card-text {
        font-size: 14px;
        color: #333;
        margin-bottom: 15px;
        min-height: 60px;
    }

    .card-actions {
        display: flex;
        justify-content: space-between;
    }

    .btn {
        padding: 8px 16px;
        font-size: 14px;
        border: none;
        border-radius: 10px;
        font-weight: 600;
        cursor: pointer;
        text-decoration: none;
    }

    .btn-edit {
        background-color: #3f51b5;
        color: white;
    }

        .btn-edit:hover {
            background-color: #303f9f;
        }

    .btn-delete {
        background-color: #e53935;
        color: white;
    }

        .btn-delete:hover {
            background-color: #c62828;
        }

    .btn-create {
        display: block;
        width: fit-content;
        margin: 0 auto 30px auto;
        background-color: #3f51b5;
        color: white;
        padding: 10px 20px;
        border-radius: 12px;
        font-weight: 600;
        text-decoration: none;
        box-shadow: 0 6px 15px rgba(63, 81, 181, 0.3);
    }

        .btn-create:hover {
            background-color: #303f9f;
        }
</style>

<div class="container">
    <h2>About Details</h2>


    <div class="card-grid">
        @foreach (var item in Model)
        {
            <div class="card">
                <img src="~/AboutImages/@item.UpperImage" alt="About Image" />

                <div class="card-title">@item.Uppertitle</div>
                <div class="card-text">@item.uppercontent</div>

                <div class="card-actions">
                    <a asp-action="EditAbout" asp-route-id="@item.AboutId" class="btn btn-edit">Edit</a>
                    <a asp-action="DeleteAbout" asp-route-id="@item.AboutId" class="btn btn-delete">Delete</a>
                </div>
            </div>
        }
    </div>
</div>
