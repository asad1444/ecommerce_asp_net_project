@model loginlogout.Models.CategoryVM

@{
    ViewData["Title"] = "Edit Category";
    Layout = "~/Views/Shared/_Layoutcrud.cshtml";
}

<style>
    .form-container {
        max-width: 600px;
        margin: 30px auto;
        background-color: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
        height:520px;
    }

        .form-container h3 {
            margin-bottom: 20px;
            color: #3f51b5;
            font-weight: 600;
        }

    .form-label {
        font-weight: 500;
    }

    .btn-primary {
        background-color: #3f51b5;
        border: none;
        border-radius: 8px;
    }

        .btn-primary:hover {
            background-color: #303f9f;
        }

    img.preview {
        width: 150px;
        height: 70px;
        object-fit: cover;
        border-radius: 10px;
        margin-bottom: 10px;
    }
</style>

<div class="form-container">
    <h3>Edit Category</h3>

    <form asp-action="Edit" enctype="multipart/form-data">
        <input type="hidden" asp-for="CategoryId" />

        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label"></label>
            <input asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        @if (!string.IsNullOrEmpty(ViewBag.CurrentImage))
        {
            <div class="form-group text-center">
                <label>Current Product Image</label>
                <div>
                    <img src="~/CategoryImages/@ViewBag.CurrentImage" width="150px" height="160px" style="border-radius: 10px; margin-bottom: 10px;" />
                </div>
            </div>
        }
        <div class="mb-3">
            <label asp-for="CategoryPhoto" class="form-label"></label>
            <input asp-for="CategoryPhoto" class="form-control" />
            <span asp-validation-for="CategoryPhoto" class="text-danger"></span>
        </div>


      
        <button type="submit" class="btn btn-primary w-100">Save</button>
    </form>

   
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
