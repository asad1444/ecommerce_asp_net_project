@model loginlogout.Models.Category

@{
    ViewData["Title"] = "Delete Category";
    Layout = "~/Views/Shared/_Layoutcrud.cshtml";
}

<style>
    .form-container {
        max-width: 600px;
        margin: 30px auto;
        background-color: #fff;
        padding: 30px;
        border-radius: 12px;
        box-shadow: 0 2px 8px rgba(0,0,0,0.1);
    }

        .form-container h3 {
            margin-bottom: 20px;
            color: #e53935;
            font-weight: 600;
        }

    .form-label {
        font-weight: 500;
        color: #333;
    }

    .form-control-static {
        padding-top: 7px;
        padding-bottom: 7px;
        display: block;
        font-size: 1rem;
        color: #555;
        background-color: #f5f5f5;
        border-radius: 6px;
        padding-left: 12px;
    }

    .btn-danger {
        background-color: #e53935;
        border: none;
        border-radius: 8px;
        padding: 10px 20px;
        color: white;
    }

        .btn-danger:hover {
            background-color: #c62828;
        }

    .btn-back {
        margin-left: 10px;
        text-decoration: none;
        color: #3f51b5;
    }

        .btn-back:hover {
            text-decoration: underline;
        }
</style>

<div class="form-container">
    <h3>Delete Category</h3>
    <hr />

    <div class="mb-3">
        <label class="form-label">Category Name</label>
        <div class="form-control-static">@Html.DisplayFor(model => model.Name)</div>
    </div>

    <div class="mb-3">
        <label class="form-label">Category Image</label>
        <div class="form-control-static">@Html.DisplayFor(model => model.CategoryImage)</div>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CategoryId" />
        <button type="submit" class="btn btn-primary w-100">Delete</button>
    </form>

</div>
