@page
@model LoginModel
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!doctype html>
<html lang="en">
<head>
    <title>Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <!-- External Fonts and Icons -->
    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <!-- Template CSS -->
    <link rel="stylesheet" href="~/template/css/bootstrap.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/template/css/style.css" asp-append-version="true" />
</head>
<body style="overflow-y:hidden;">
    <section class="ftco-section" style="min-height: 100vh; display: flex; align-items: center;">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-5">
                    <div class="login-wrap p-4 p-md-5">
                        <div class="icon d-flex align-items-center justify-content-center" style="background-color: #5c6bc0;">
                            <span class="fa fa-user-o" style="color: white; font-size: 30px;"></span>
                        </div>

                        <h3 class="text-center mb-4" style="color: #5c6bc0;">Login Here</h3>

                        <form method="post" class="login-form">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-2"></div>

                            <div class="form-group">
                                <input asp-for="Input.Email" class="form-control rounded-left" placeholder="Email" />
                                <span asp-validation-for="Input.Email" class="text-danger"></span>
                            </div>

                            <div class="form-group">
                                <input asp-for="Input.Password" type="password" class="form-control rounded-left" placeholder="Password" />
                                <span asp-validation-for="Input.Password" class="text-danger"></span>
                            </div>

                            <div class="form-group d-flex align-items-center justify-content-between">
                                @* <div class="form-check"> *@
                                @*     <input asp-for="Input.RememberMe" class="form-check-input" /> *@
                                @*     <label class="form-check-label" asp-for="Input.RememberMe">Remember Me</label> *@
                                @* </div> *@
                                @* <div> *@
                                @*     <a asp-page="./ForgotPassword">Forgot Password?</a> *@
                                @* </div> *@
                            </div>

                            <div class="form-group mt-4">
                                <button type="submit" class="btn btn-primary rounded submit p-3 px-5 w-100">Login</button>
                            </div>
                        </form>

                        <div class="text-center mt-3">
<p style="position:relative; bottom:26px; color: #5c6bc0;">
    Don’t have an account? <a asp-page="./Register" style="color: #5c6bc0;">Register</a>
</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Scripts -->
    <script src="~/template/js/jquery.min.js" asp-append-version="true"></script>
    <script src="~/template/js/popper.js" asp-append-version="true"></script>
    <script src="~/template/js/bootstrap.min.js" asp-append-version="true"></script>
    <script src="~/template/js/main.js" asp-append-version="true"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
</body>
</html>
